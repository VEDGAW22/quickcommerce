<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for empty stars -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Light gray color for empty stars -->
        </shape>
    </item>
    <!-- Secondary progress for partially filled stars -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFD700" /> <!-- Gold color for partially filled stars -->
            </shape>
        </clip>
    </item>
    <!-- Progress for filled stars -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFD700" /> <!-- Gold color for filled stars -->
            </shape>
        </clip>
    </item>
</layer-list>