<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="9.10dp">
    
    <LinearLayout
        android:id="@+id/llProductImages"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_95sdp"
        android:background="@drawable/bg_top_product"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="130.00dp"
            android:layout_height="58.00dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/product1"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:visibility="visible"
                android:background="@drawable/bg_product"
                android:src="@drawable/clothes"/>
            <ImageView
                android:id="@+id/product2"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:visibility="visible"
                android:background="@drawable/bg_product"
                android:src="@drawable/clothes"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="130.00dp"
            android:layout_height="58.00dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/product3"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:visibility="visible"
                android:background="@drawable/bg_product"
                android:src="@drawable/clothes"/>
            <TextView
                android:id="@+id/tvProductCount"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:gravity="center"
                android:visibility="visible"
                android:text="+1"
                android:textSize="23.40sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/llProductImages"
        app:layout_constraintStart_toStartOf="@+id/llProductImages"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:layout_marginTop="3.90dp"
            android:text="T-shirt,Shirt and jeans"
            android:textColor="@color/black"
            android:textSize="14.30dp"/>
        <TextView
            android:id="@+id/tvTotalProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:layout_marginTop="3.90dp"
            android:text="4 products"
            android:textColor="@color/black"
            android:textSize="14.30sp"/>
        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="3.90dp"
            android:text="See All"
            android:textColor="@color/green"
            android:gravity="center"
            android:background="@drawable/bg_see_all"
            android:padding="5.20dp"
            android:textSize="14.30sp"
            android:textStyle="bold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>